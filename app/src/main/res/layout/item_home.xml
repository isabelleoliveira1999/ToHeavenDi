<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_margin="20sp"
                android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/appointmentsMorning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_nome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Isabelle Silva"
                android:textAlignment="viewStart"
                android:textSize="16dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txt_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="14/10/2019 as 13:00"
                android:textAlignment="viewStart"
                android:textSize="16dp"
                android:layout_below="@id/txt_nome"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>


                <ImageView
                    android:id="@+id/img_mural"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_below="@id/txt_data"
                    android:src="@drawable/ic_monster" />

                <TextView
                    android:id="@+id/txt_mural"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_mural"
                    android:layout_margin="12dp"
                    android:drawablePadding="12dp"
                    android:text="Pai Celestial, venho a Ti agradecer por este novo dia."
                    android:textAlignment="textStart"
                    android:textSize="14sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                android:layout_margin="20dp"
                android:layout_below="@id/txt_mural">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_curtir" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Curtir" />
            </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_comentar" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Comentar" />
                </LinearLayout>
            </LinearLayout>
            </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>